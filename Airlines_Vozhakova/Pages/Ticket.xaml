<Page x:Class="Airlines_Vozhakova.Pages.Ticket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Vozhakova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ticket">

    <Grid>
        <Grid Height="75" VerticalAlignment="Top" Background="Blue">
            <Image Source="/Image/airplane.png" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" Height="50" Margin="10,0,0,0"/>
            <Label Content="Управление авиалиниями" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="70,0,0,0"/>
            <Button Click="Back" Content="Вернуться" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="25" Margin="0,0,10,0"/>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,75,0,0">
            <StackPanel x:Name="parent">

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
