<UserControl x:Class="Airlines_Vozhakova.Elements.TicketItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Airlines_Vozhakova.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid Background="#DCDCDC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="price" Content="1999" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,10,0,0" Grid.Column="0"/>
        <Button Content="Подробнее" Background="#FF4500" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"
                Width="75" Height="20" Margin="0,50,0,0" Grid.Column="0"/>

        <Label Content="pobeda" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="timeFrom" Content="05:50" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="0,20,0,0" Grid.Column="1"/>
        <Label x:Name="cityFrom" Content="Пермь" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0" Grid.Column="1"/>
        <Label x:Name="dateFrom" Content="29 сентября 2021" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,70,0,0" Grid.Column="1"/>

        <Image Source="/Image/airplane.png" HorizontalAlignment="Left" VerticalAlignment="Center" Width="25" Height="25" Grid.Column="2" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-30.593"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label x:Name="timeWay" Content="В пути: 2ч 15 мин" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"/>
        <Image Source="/Image/airplane.png" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="25" Width="25" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="31.683"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="5" Margin="0,30,0,0" Background="Gray" Grid.Column="2"/>

        <Label Content="pobeda" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="3"/>
        <Label x:Name="timeTo" Content="06:50" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="0,20,0,0" Grid.Column="3"/>
        <Label x:Name="cityTo" Content="Пермь" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0" Grid.Column="3"/>
        <Label x:Name="dateTo" Content="29 сентября 2021" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,70,0,0" Grid.Column="3"/>
    </Grid>
</UserControl>